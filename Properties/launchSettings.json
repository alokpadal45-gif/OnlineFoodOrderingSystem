{
  "$schema": "https://json.schemastore.org/launchsettings.json",
  "profiles": {
    "http": {
      "commandName": "Project",
      "dotnetRunMessages": true,
      "launchBrowser": true,
      // use loopback IP with port 0 to let the runtime pick an available port
      "applicationUrl": "http://127.0.0.1:0",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    },
    "https": {
      "commandName": "Project",
      "dotnetRunMessages": true,
      "launchBrowser": true,
      // prefer dynamic ports for both https and http to avoid conflicts
      "applicationUrl": "https://127.0.0.1:0;http://127.0.0.1:0",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  }
}
