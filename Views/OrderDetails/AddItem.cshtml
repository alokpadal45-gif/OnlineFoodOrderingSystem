@{
    ViewData["Title"] = "Add Item to Order";
    int orderId = (int)ViewData["OrderId"];
}

<h1><i class="fas fa-plus-circle"></i> Add Item to Order</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <input type="hidden" name="orderId" value="@orderId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label for="foodId" class="form-label">Food Item</label>
                <select id="foodId" name="foodId" class="form-select" required>
                    <option value="">-- Select Food Item --</option>
                    @{
                        var foodList = (SelectList)ViewData["FoodId"];
                        foreach (var item in foodList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="quantity" class="form-label">Quantity</label>
                <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1" max="100" required />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Item
                </button>
                <a asp-action="Create" asp-route-orderId="@orderId" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>
