@model OnlineFoodOrderingSystem.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "My Dashboard";
}

<!-- Customer Dashboard - personalized for customer experience -->
<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-user"></i> My Dashboard</h2>
        <p class="text-muted">Welcome back! Here's your order summary</p>
    </div>
</div>

<!-- Order Summary Cards for Customer -->
<div class="row mb-4">
    <!-- Total Orders -->
    <div class="col-md-6">
        <div class="card bg-primary text-white shadow">
            <div class="card-body text-center">
                <i class="fas fa-shopping-bag fa-3x mb-3"></i>
                <h2>@Model.TotalOrders</h2>
                <p class="mb-0">Total Orders</p>
            </div>
        </div>
    </div>

    <!-- Pending Orders -->
    <div class="col-md-6">
        <div class="card bg-warning text-white shadow">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-3x mb-3"></i>
                <h2>@Model.PendingOrders</h2>
                <p class="mb-0">Orders in Progress</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions for Customer -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Food" asp-action="Index" class="btn btn-lg btn-success w-100">
                            <i class="fas fa-utensils fa-2x d-block mb-2"></i>
                            Browse Menu
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Order" asp-action="Create" class="btn btn-lg btn-primary w-100">
                            <i class="fas fa-cart-plus fa-2x d-block mb-2"></i>
                            Place Order
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-lg btn-info w-100">
                            <i class="fas fa-history fa-2x d-block mb-2"></i>
                            Order History
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- My Recent Orders for Customer -->
<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-history"></i> My Recent Orders</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order #</th>
                                    <th>Date</th>
                                    <th>Items</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td><strong>#@order.OrderId</strong></td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>@order.OrderDetails.Count() items</td>
                                        <td><strong>$@order.TotalAmount.ToString("N2")</strong></td>
                                        <td>
                                            <span class="badge 
                                                @(order.Status == "Delivered" ? "bg-success" : 
                                                  order.Status == "Processing" ? "bg-warning" : 
                                                  order.Status == "Cancelled" ? "bg-danger" : "bg-info")">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle"></i> You haven't placed any orders yet. 
                        <a asp-controller="Food" asp-action="Index" class="alert-link">Browse our menu</a> to get started!
                    </div>
                }
            </div>
        </div>
    </div>
</div>