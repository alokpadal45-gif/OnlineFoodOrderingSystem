@model OnlineFoodOrderingSystem.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Manager Dashboard";
}

<!-- Manager Dashboard - focused on operations and revenue -->
<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-chart-line"></i> Manager Dashboard</h2>
        <p class="text-muted">Operations overview and order management</p>
    </div>
</div>

<!-- Statistics Cards for Manager -->
<div class="row mb-4">
    <!-- Total Orders -->
    <div class="col-md-4">
        <div class="card bg-info text-white shadow">
            <div class="card-body text-center">
                <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                <h3>@Model.TotalOrders</h3>
                <p class="mb-0">Total Orders</p>
            </div>
        </div>
    </div>

    <!-- Pending Orders -->
    <div class="col-md-4">
        <div class="card bg-warning text-white shadow">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-3x mb-3"></i>
                <h3>@Model.PendingOrders</h3>
                <p class="mb-0">Pending Orders</p>
            </div>
        </div>
    </div>

    <!-- Revenue -->
    <div class="col-md-4">
        <div class="card bg-success text-white shadow">
            <div class="card-body text-center">
                <i class="fas fa-dollar-sign fa-3x mb-3"></i>
                <h3>$@Model.TotalRevenue.ToString("N2")</h3>
                <p class="mb-0">Total Revenue</p>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders for Manager -->
<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-list"></i> Recent Orders</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td>#@order.OrderId</td>
                                        <td>@order.User.FirstName @order.User.LastName</td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>$@order.TotalAmount.ToString("N2")</td>
                                        <td>
                                            <span class="badge 
                                                @(order.Status == "Delivered" ? "bg-success" : 
                                                  order.Status == "Processing" ? "bg-warning" : "bg-info")">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId" 
                                               class="btn btn-sm btn-info">Details</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center">No recent orders.</p>
                }
            </div>
        </div>
    </div>
</div>