@{
    ViewData["Title"] = "About Us";
}

<h1><i class="fas fa-info-circle"></i> @ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body">
                <h3>Welcome to Our Food Ordering System</h3>
                <p class="lead">
                    We are passionate about bringing delicious, quality food right to your doorstep.
                </p>
                <p>
                    Our online food ordering system makes it easy for you to browse our menu, 
                    place orders, and track deliveries - all from the comfort of your home or office.
                </p>
            </div>
        </div>

        <h3><i class="fas fa-bullseye"></i> Our Mission</h3>
        <p>
            To provide our customers with the best food ordering experience by offering:
        </p>
        <ul>
            <li>High-quality, fresh ingredients</li>
            <li>Fast and reliable delivery service</li>
            <li>Easy-to-use online ordering platform</li>
            <li>Excellent customer service</li>
            <li>Competitive pricing</li>
        </ul>

        <h3><i class="fas fa-star"></i> Why Choose Us?</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5><i class="fas fa-check-circle text-success"></i> Quality Guaranteed</h5>
                        <p>We use only the freshest ingredients and maintain the highest food safety standards.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5><i class="fas fa-shipping-fast text-primary"></i> Fast Delivery</h5>
                        <p>Our efficient delivery system ensures your food arrives hot and fresh.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5><i class="fas fa-mobile-alt text-info"></i> Easy Ordering</h5>
                        <p>Simple and intuitive online ordering platform for your convenience.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5><i class="fas fa-heart text-danger"></i> Customer First</h5>
                        <p>Your satisfaction is our top priority. We're here to serve you!</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card bg-light mt-4">
            <div class="card-body">
                <h4><i class="fas fa-phone"></i> Get in Touch</h4>
                <p>Have questions or feedback? We'd love to hear from you!</p>
                <a asp-action="Contact" class="btn btn-primary">
                    <i class="fas fa-envelope"></i> Contact Us
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5><i class="fas fa-chart-line"></i> Quick Stats</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h3 class="text-primary">500+</h3>
                    <p class="text-muted">Happy Customers</p>
                </div>
                <div class="mb-3">
                    <h3 class="text-success">1000+</h3>
                    <p class="text-muted">Orders Delivered</p>
                </div>
                <div class="mb-3">
                    <h3 class="text-warning">50+</h3>
                    <p class="text-muted">Menu Items</p>
                </div>
                <div>
                    <h3 class="text-info">4.8‚≠ê</h3>
                    <p class="text-muted">Average Rating</p>
                </div>
            </div>
        </div>
    </div>
</div>