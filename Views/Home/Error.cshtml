@model OnlineFoodOrderingSystem.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <h1 class="text-danger display-1"><i class="fas fa-exclamation-triangle"></i></h1>
    <h1 class="text-danger">Error</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>
</div>

@if (Model.ShowRequestId)
{
    <div class="alert alert-warning mt-4">
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    </div>
}

<div class="card mt-4">
    <div class="card-body text-center">
        <h3>What can you do?</h3>
        <ul class="list-unstyled mt-3">
            <li class="mb-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home"></i> Go to Home Page
                </a>
            </li>
            <li class="mb-2">
                <a href="javascript:history.back()" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Go Back
                </a>
            </li>
            <li>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-info">
                    <i class="fas fa-envelope"></i> Contact Support
                </a>
            </li>
        </ul>
    </div>
</div>