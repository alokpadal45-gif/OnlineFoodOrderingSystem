@model OnlineFoodOrderingSystem.Models.User

@{
    ViewData["Title"] = "My Profile";
    var orders = ViewBag.Orders as List<OnlineFoodOrderingSystem.Models.Order> ?? new List<OnlineFoodOrderingSystem.Models.Order>();
    var roles = ViewBag.Roles as IList<string> ?? new List<string>();
}

<div class="row mb-3">
    <div class="col-md-6">
        <h1><i class="fas fa-user-circle"></i> My Profile</h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Edit" class="btn btn-warning me-2">
            <i class="fas fa-edit"></i> Edit Profile
        </a>
        <a asp-action="ChangePassword" class="btn btn-secondary">
            <i class="fas fa-key"></i> Change Password
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <!-- Personal Information -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5><i class="fas fa-user"></i> Personal Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Full Name:</dt>
                    <dd class="col-sm-8"><strong>@Model.FirstName @Model.LastName</strong></dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Phone:</dt>
                    <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not set")</dd>

                    <dt class="col-sm-4">Address:</dt>
                    <dd class="col-sm-8">@(Model.Address ?? "Not set")</dd>

                    <dt class="col-sm-4">Member Since:</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                    <dt class="col-sm-4">Role:</dt>
                    <dd class="col-sm-8">
                        @foreach (var role in roles)
                        {
                            <span class="badge bg-@(role == "Admin" ? "danger" : role == "Customer" ? "success" : "secondary")">
                                @role
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Order Summary -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5><i class="fas fa-shopping-cart"></i> Order Summary</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-4">
                        <h3 class="text-primary">@orders.Count</h3>
                        <small>Total Orders</small>
                    </div>
                    <div class="col-4">
                        <h3 class="text-success">@orders.Count(o => o.OrderStatus == "Delivered")</h3>
                        <small>Delivered</small>
                    </div>
                    <div class="col-4">
                        <h3 class="text-warning">@orders.Count(o => o.OrderStatus == "Pending" || o.OrderStatus == "Confirmed" || o.OrderStatus == "Preparing")</h3>
                        <small>Active</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Order History -->
<div class="card">
    <div class="card-header bg-info text-white">
        <h5><i class="fas fa-history"></i> Order History</h5>
    </div>
    <div class="card-body">
        @if (orders.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in orders)
                    {
                        <tr>
                            <td>#@order.OrderId</td>
                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            <td>@order.OrderDetails.Count items</td>
                            <td>NPR @order.TotalAmount.ToString("N2")</td>
                            <td>
                                <span class="badge bg-@(
                                    order.OrderStatus == "Delivered" ? "success" :
                                    order.OrderStatus == "Cancelled" ? "danger" :
                                    order.OrderStatus == "Out for Delivery" ? "info" :
                                    order.OrderStatus == "Preparing" ? "warning" :
                                    order.OrderStatus == "Confirmed" ? "primary" : "secondary")">
                                    @order.OrderStatus
                                </span>
                            </td>
                            <td>
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning mb-0">
                <i class="fas fa-exclamation-triangle"></i> No orders found.
            </div>
        }
    </div>
</div>
