@model OnlineFoodOrderingSystem.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Order</h1>
<hr />

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this order?</h4>
    <p>This action will permanently delete Order #@Model.OrderId and all its items. This cannot be undone!</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4>Order #@Model.OrderId Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Order ID:</dt>
            <dd class="col-sm-9"><strong>#@Model.OrderId</strong></dd>

            <dt class="col-sm-3">Customer:</dt>
            <dd class="col-sm-9">@Model.Customer?.CustomerName</dd>

            <dt class="col-sm-3">Order Date:</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</dd>

            <dt class="col-sm-3">Total Amount:</dt>
            <dd class="col-sm-9"><strong>@Model.TotalAmount.ToString("C")</strong></dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(
                    Model.OrderStatus == "Delivered" ? "success" :
                    Model.OrderStatus == "Cancelled" ? "danger" :
                    Model.OrderStatus == "Out for Delivery" ? "info" :
                    Model.OrderStatus == "Preparing" ? "warning" :
                    Model.OrderStatus == "Confirmed" ? "primary" : "secondary"
                )">
                    @Model.OrderStatus
                </span>
            </dd>

            <dt class="col-sm-3">Delivery Address:</dt>
            <dd class="col-sm-9">@(Model.DeliveryAddress ?? Model.Customer?.Address ?? "N/A")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="OrderId" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Yes, Delete Order
    </button>
    <a asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-info">
        <i class="fas fa-eye"></i> View Details
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Cancel
    </a>
</form>