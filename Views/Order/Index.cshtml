@model IEnumerable<OnlineFoodOrderingSystem.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h1><i class="fas fa-shopping-cart"></i> Orders</h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Order
        </a>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Order Date</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Delivery Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>#@item.OrderId</strong></td>
                        <td>@item.Customer?.CustomerName</td>
                        <td>@item.OrderDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                        <td><strong>@item.TotalAmount.ToString("C")</strong></td>
                        <td>
                            <span class="badge bg-@(
                                item.OrderStatus == "Delivered" ? "success" :
                                item.OrderStatus == "Cancelled" ? "danger" :
                                item.OrderStatus == "Out for Delivery" ? "info" :
                                item.OrderStatus == "Preparing" ? "warning" :
                                item.OrderStatus == "Confirmed" ? "primary" : "secondary"
                            )">
                                @item.OrderStatus
                            </span>
                        </td>
                        <td>@(item.DeliveryAddress ?? item.Customer?.Address ?? "N/A")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-info" title="View Details">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="UpdateStatus" asp-route-id="@item.OrderId" class="btn btn-sm btn-primary" title="Update Status">
                                <i class="fas fa-sync"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-warning" title="Edit">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-sm btn-danger" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> No orders found. <a asp-action="Create">Create the first order</a>
    </div>
}