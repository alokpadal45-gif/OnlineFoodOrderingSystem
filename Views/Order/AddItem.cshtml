@model OnlineFoodOrderingSystem.Models.OrderDetail

@{
    ViewData["Title"] = "Add Item to Order";
    var orderId = ViewData["OrderId"];
}

<h1><i class="fas fa-plus-circle"></i> Add Item to Order #@orderId</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="AddItem" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" name="OrderId" value="@orderId" />

            <div class="mb-3">
                <label asp-for="FoodId" class="form-label"></label>
                <select asp-for="FoodId" class="form-select" asp-items="ViewBag.FoodId" required>
                    <option value="">-- Select Food Item --</option>
                </select>
                <span asp-validation-for="FoodId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" type="number" min="1" max="100" value="1" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> The price will be automatically set based on the selected food item.
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add Item to Order
                </button>
                <a asp-action="Details" asp-route-id="@orderId" class="btn btn-info">
                    <i class="fas fa-eye"></i> View Order
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Orders
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}