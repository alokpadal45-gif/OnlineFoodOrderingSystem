@model IEnumerable<OnlineFoodOrderingSystem.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h1><i class="fas fa-users"></i> Customers</h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add New Customer
        </a>
    </div>
</div>
<hr />

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                        <td><strong>@customer.CustomerName</strong></td>
                        <td>
                            <a href="mailto:@customer.Email">@customer.Email</a>
                        </td>
                        <td>
                            <a href="tel:@customer.PhoneNumber">@customer.PhoneNumber</a>
                        </td>
                        <td>@customer.Address</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-info" title="View Details">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-warning" title="Edit">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-danger" title="Delete">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> <strong>No customers found.</strong> 
        <a asp-action="Create" class="alert-link">Create your first customer</a>
    </div>
}
