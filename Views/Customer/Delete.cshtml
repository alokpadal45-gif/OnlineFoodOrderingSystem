@model OnlineFoodOrderingSystem.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2 class="text-danger">Delete Customer</h2>
<h3>Are you sure you want to delete this customer?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-3">Customer ID:</dt>
    <dd class="col-sm-9">@Model.CustomerId</dd>

    <dt class="col-sm-3">Name:</dt>
    <dd class="col-sm-9">@Model.CustomerName</dd>

    <dt class="col-sm-3">Email:</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Phone:</dt>
    <dd class="col-sm-9">@Model.PhoneNumber</dd>

    <dt class="col-sm-3">Address:</dt>
    <dd class="col-sm-9">@Model.Address</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-info">View Details</a>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>